<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout_viewhodelCustomer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_bgr_job"
    android:padding="20dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"


    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TVNameCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/inter_bold"
            android:text="Floyd miles"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/ImgUpdateClient"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:src="@drawable/menu_option_item" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <TextView
            android:id="@+id/TVPhoneCustome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="+999999999"
            android:singleLine="true"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/TVAddressCustome"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/inter_regular"
            android:text="Thanh khÃª"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>