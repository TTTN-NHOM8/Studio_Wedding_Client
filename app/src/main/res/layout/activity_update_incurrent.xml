<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nscvOncurrent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".view.activity.contract.UpdateOncurrentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imgBackFromUpdateOncurrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_back" />

                <TextView
                    android:id="@+id/tvTitleUpdateOncurrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/title_info_incurrent"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingLeft="19dp"
                            android:paddingTop="11dp"
                            android:paddingRight="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|left"
                                    android:drawableLeft="@drawable/detail_contract_id"
                                    android:drawablePadding="14dp"
                                    android:gravity="center_vertical|start"
                                    android:text="Thông tin cơ bản"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="7dp"
                                    android:text="Tên sản phẩm"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/tvNameProductOncurrent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:drawableLeft="@drawable/contract_incurred_late_return"
                                    android:drawablePadding="14dp"
                                    android:ellipsize="end"
                                    android:paddingTop="7dp"
                                    android:text="Tiền cọc"
                                    android:textColor="#000000"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView

                                    android:id="@+id/tvIDHDCTOncurrent"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|left"
                                    android:drawablePadding="14dp"
                                    android:ellipsize="end"
                                    android:gravity="center|left"
                                    android:text="Mã hợp đồng"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/blue_g"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="7dp"
                                    android:text="Giá thuê"
                                    android:textAlignment="textEnd"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/tvPriceOncurent"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:drawableRight="@drawable/contract_total_amount"
                                    android:drawablePadding="14dp"
                                    android:ellipsize="end"
                                    android:paddingTop="7dp"
                                    android:text="Giá thuê"
                                    android:textAlignment="textEnd"
                                    android:textColor="#000000"
                                    android:textSize="15sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingLeft="19dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="11dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="7dp"
                                    android:text="Ngày thuê"
                                    android:textAlignment="textStart"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/tvDolOncurent"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:drawableLeft="@drawable/detail_contract_doh"
                                    android:drawablePadding="14dp"
                                    android:ellipsize="end"
                                    android:paddingTop="7dp"
                                    android:text="Ngày thuê"
                                    android:textAlignment="textStart"
                                    android:textColor="#000000"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="7dp"
                                    android:text="Ngày trả"
                                    android:textAlignment="textEnd"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/tvDorOncurent"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:drawableRight="@drawable/detail_contract_doh"
                                    android:drawablePadding="14dp"
                                    android:ellipsize="end"
                                    android:paddingTop="7dp"
                                    android:text="Ngày trả"
                                    android:textAlignment="textEnd"
                                    android:textColor="#000000"
                                    android:textSize="15sp" />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="Chi tiết phát sinh" />

                <EditText
                    android:id="@+id/edOncurretNote"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/edittext_bgr_white"
                    android:clickable="true"
                    android:drawableLeft="@drawable/spinner_select"
                    android:drawableRight="@drawable/spinner_arrow_down"
                    android:drawablePadding="8dp"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="text"
                    android:padding="13dp"
                    android:text="Nội dung"
                    android:textSize="14dp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/edOncurretFine"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/edittext_bgr_white"
                    android:drawableLeft="@drawable/contract_total_amount"
                    android:drawablePadding="8dp"
                    android:ems="10"
                    android:hint="Phí phát sinh "
                    android:inputType="number"
                    android:padding="13dp"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edOncurrentDor"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/edittext_bgr_white"
                    android:clickable="true"
                    android:drawableLeft="@drawable/contract_total_amount"
                    android:drawablePadding="8dp"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Ngày trả lần 2 "
                    android:inputType="date"
                    android:padding="13dp"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnUpdateOncurrent"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_bgr_primary"
                    android:text="Lưu"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>